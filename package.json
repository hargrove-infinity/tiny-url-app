{
  "name": "express-gen-ts",
  "version": "0.0.0",
  "scripts": {
    "build": "ts-node ./scripts/build.ts",
    "clean-install": "rm -rf ./node_modules && rm -r package-lock.json && npm i",
    "dev": "NODE_ENV=development ts-node ./src",
    "dev:watch": "nodemon --exec \"npm run dev\" --watch ./src --ext .ts",
    "dev:hot": "nodemon --exec \"npm run type-check && npm run dev\" --watch ./src --ext .ts",
    "lint": "eslint --flag unstable_ts_config",
    "start": "NODE_ENV=production node -r ./config.js ./dist",
    "test": "NODE_ENV=test ts-node ./spec",
    "test:watch": "nodemon --exec \"npm run test\" --watch ./src --watch ./spec --ext .ts",
    "type-check": "tsc --noEmit --pretty",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:migrate:dev": "dotenv -e ./config/.env.development -- npx prisma migrate dev",
    "db:migrate:deploy:dev": "dotenv -e ./config/.env.development -- npx prisma migrate deploy"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^8.0.0",
    "inserturlparams": "^2.0.5",
    "jsonfile": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "nodemailer": "^7.0.3",
    "nodemailer-express-handlebars": "^6.1.2",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@stylistic/eslint-plugin-js": "^4.2.0",
    "@stylistic/eslint-plugin-ts": "^4.2.0",
    "@swc/core": "^1.11.5",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/eslint__js": "^9.14.0",
    "@types/express": "^5.0.0",
    "@types/find": "^0.2.4",
    "@types/fs-extra": "^11.0.4",
    "@types/jasmine": "^5.1.7",
    "@types/jsonfile": "^6.1.4",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/module-alias": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.8",
    "@types/nodemailer": "^6.4.17",
    "@types/nodemailer-express-handlebars": "^4.0.5",
    "@types/supertest": "^6.0.2",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.21.0",
    "eslint-plugin-n": "^17.16.1",
    "find": "^0.3.0",
    "fs-extra": "^11.3.0",
    "jasmine": "^5.6.0",
    "jiti": "^2.4.2",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.25.0"
  }
}
